<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_110sdp"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:clipChildren="false"
    >
        <View
            android:id="@+id/elevated__home_card_view"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            android:layout_height="0dp"
            >

        </View>

        <!--    <androidx.cardview.widget.CardView-->
        <!--        android:layout_margin="@dimen/_3sdp"-->
        <!--        android:visibility="visible"-->
        <!--        app:cardBackgroundColor="@android:color/transparent"-->
        <!--        app:layout_constraintStart_toStartOf="@id/elevated__home_card_view"-->
        <!--        app:layout_constraintEnd_toEndOf="@id/elevated__home_card_view"-->
        <!--        app:layout_constraintTop_toTopOf="@id/elevated__home_card_view"-->
        <!--        app:layout_constraintBottom_toBottomOf="@id/elevated__home_card_view"-->
        <!--        android:layout_width="0dp"-->
        <!--        android:layout_height="match_parent"-->
        <!--        app:cardCornerRadius="14dp">-->
        <LinearLayout
            app:layout_constraintStart_toStartOf="@id/elevated__home_card_view"
            app:layout_constraintEnd_toEndOf="@id/elevated__home_card_view"
            app:layout_constraintTop_toTopOf="@id/elevated__home_card_view"
            app:layout_constraintBottom_toBottomOf="@id/elevated__home_card_view"
            android:layout_margin="@dimen/_2sdp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/cat_image"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <TextView

                    android:id="@+id/cat_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"

                    android:background="#00FFFFFF"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:textColor="@color/copper_text_color"
                    tools:text="Categoryname" />
        </LinearLayout>
        <!--    </androidx.cardview.widget.CardView>-->

</androidx.constraintlayout.widget.ConstraintLayout>