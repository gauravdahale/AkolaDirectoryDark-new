<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/synthcolor"
    android:fillViewport="true">
    <LinearLayout
        android:background="@color/synthcolor"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="10dp"
            android:background="@color/synthcolor"

            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
             >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="A Product Of"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/DevImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:elevation="14dp"
                    android:src="@drawable/mypic"
                    android:background="@color/copper_text_color"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="Director : Gaurav Dahale"
                    android:textAlignment="center"
                    android:textColor="@color/copper_text_color"
                    android:textColorLink="@color/phonetext"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/devnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autoLink="phone|all"
                    android:text="Phone : 8208044979"
                    android:textAlignment="center"
                    android:textColor="@color/copper_text_color"
                    android:textColorLink="@color/copper_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autoLink="web"
                    android:text="www.gtechenterprises.in"
                    android:textAlignment="center"
                    android:textColor="@color/copper_text_color"
                    android:textColorLink="@color/copper_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#f3f6e4" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marketed By"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:typeface="sans" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/mangalamlogo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="Umesh Koinkar"
                    android:textAlignment="center"
                    android:textColor="@color/phonetext"
                    android:textColorLink="@color/phonetext"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="Phone : 9766216581"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/phonetext"
                    android:textColorLink="@color/phonetext"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ourline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="17dp"
            android:textColor="@color/copper_text_color"
            android:text="We make all kinds of android applications, web sites and computer softwares. "
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/registerline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="17dp"
            android:text="* Contact Us today to Register Your Business *"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </LinearLayout>
</ScrollView>
