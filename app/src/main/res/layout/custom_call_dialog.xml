<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/synthcolor"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/synthcolor"
            android:padding="5dp"

            android:text=" Choose Number"
            android:textAlignment="center"
            android:textColor="@color/amber_400" />

        <TextView
            android:id="@+id/numberone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/synthcolor"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/copper_text_color"
            android:textSize="16sp"
            tools:text="Phone1" />

        <View
            android:layout_width="match_parent"

            android:layout_height="1dp"
            android:background="@color/copper_text_color_30" />

        <TextView
            android:id="@+id/numbertwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/synthcolor"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/copper_text_color"
            android:textSize="16sp"
            tools:text="Phone2" />
    </LinearLayout>
</androidx.cardview.widget.CardView>