<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gauravdahale.gtech.akoladirectory.activity.PromoActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/promoimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/promotext"
        style="@style/AndroidImageSlider_Attractive_Rect_Blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"

        android:autoLink="all"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="ddddddddfsdfsfsfsfsfd" />
</LinearLayout>
